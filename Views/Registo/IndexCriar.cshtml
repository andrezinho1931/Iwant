@model Utilizador

@{
    ViewData["Title"] = "Criar Utilizador";
}
<body class="body-reclamacoes">

    <div class="header">
       <img src="~/imagens/fotinha.png" alt="Logo IWANT"> 
    </div>

    <!-- Exibir mensagem de sucesso -->
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success">
            @TempData["MensagemSucesso"]
        </div>
    }
   <br>
   <div class="section">
        <h2>Novo Utilizador</h2>

   <form  asp-controller="Registo" asp-action="Criar" method="post">


        <label for="nome">Nome:</label>
        <input type="text" asp-for="Nome"  placeholder="Digite seu nome" >
        @Html.ValidationMessageFor(x => x.Nome)
  
   
        <label for="Idade">Idade:</label>
        <input type="number" asp-for="Idade"  placeholder="Digite sua idade">
        @Html.ValidationMessageFor(x => x.Idade)
    
    
        <label for="curso">Curso:</label>
        <input type="text" asp-for="Curso"  placeholder="Digite seu curso">
        @Html.ValidationMessageFor(x => x.Curso)


        <label for="Num_telefone">Telemóvel:</label>
        <input type="text" asp-for="Num_telefone"  placeholder="Digite seu número">
        @Html.ValidationMessageFor(x => x.Num_telefone)
  
  
        <label for="email">Email:</label>
        <input type="email" asp-for="Email"  placeholder="Digite seu email">
        @Html.ValidationMessageFor(x => x.Email)
    

   
        <label for="login">Login:</label>
        <input type="text" asp-for="Login"  placeholder="Digite seu login">
        @Html.ValidationMessageFor(x => x.Login)
    


    
        <label for="senha">Senha:</label>
        <input type="password" asp-for="Senha"  placeholder="Digite sua senha">
        @Html.ValidationMessageFor(x => x.Senha)


