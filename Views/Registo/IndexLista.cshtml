@model List<Utilizador>
<div class="text-center">
    <h1 class="display-4">Listagem de utilizadores</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Senha</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Utilizador utilizador in Model)
                {
                    <tr>
                        <th scope="row">@utilizador.IdUtilizador</th>
                        <td>@utilizador.Nome</td>
                        <td>@utilizador.Login</td>
                        <td>@utilizador.Senha</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-route-id="@utilizador.IdUtilizador" asp-controller="Registo" asp-action="IndexEditar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@utilizador.IdUtilizador" asp-controller="Registo" asp-action="IndexApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>
